        (adsbygoogle = window.adsbygoogle || []).push({});
      </script>
    </div>
    <div>
      <main class="flex flex-col lg:flex-row items-start justify-center w-full gap-4 max-w-screen-xl mx-auto px-2 pt-[48px] lg:pt-0">
