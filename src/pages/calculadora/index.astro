                value={"$" + (oficial * 1.51).toFixed(2)}
                disabled
                class="border border-zinc-300 dark:bg-zinc-800/50 bg-zinc-200/50 rounded-lg w-full p-2 text-right"
              />
            </div>
          </form>
        </section>

        <!-- NUEVO BANNER ENTRE SECCIONES EN MOBILE -->
