---
import Layout from "@/layouts/layout.astro";
import { digitalServices } from "@/db/digitalServices";

const metadata = {
  title: "Comi Dólar | Lista de servicios digitales",
  description: {
    meta: "Lista completa de los servicios digitales alcanzado por el IVA a Servicios digitales (21%) en pagos al exterior con tarjeta. Datos impuestos por la Resolución General N° 4240/2018 de AFIP.",
    og: "Lista completa de los servicios digitales alcanzado por el IVA a Servicios digitales (21%) en pagos al exterior con tarjeta. Datos impuestos por la Resolución General N° 4240/2018 de AFIP.",
  },
  canonical: "https://comidolar.com.ar/calculadora/servicios",
  og: {
    image: "https://comidolar.com.ar/assets/img/opengraph/servicios.webp",
    video: "https://comidolar.com.ar/assets/img/opengraph/video.webm",
  },
};
---

<Layout metadata={metadata}>
  <main>
    <img
      src="/assets/img/opengraph/servicios.webp"
      alt="AFIP Servicios digitales"
      class="w-full h-64 object-cover object-center rounded-xl"
    />
    <h1 class="text-4xl font-bold mt-8 mb-4 text-center">
      Lista de Servicios Digitales AFIP
    </h1>
    <h2 class="text-2xl mb-6 text-center">
      Esta página contiene la lista completa de los servicios digitales
      alcanzado por el IVA a Servicios digitales (21%) en pagos al exterior con
      tarjeta.
    </h2>
    <p>
      Datos impuestos por la <a
        class="text-blue-500 hover:underline"
        target="_blank"
        referrerpolicy="no-referrer"
        href="https://www.afip.gob.ar/iva/servicios-digitales/concepto.asp"
        >Resolución General N° 4240/2018 de AFIP</a
      >.
    </p>
    <section class="flex flex-col bg-white dark:bg-black p-2 mt-2 gap-2 rounded-xl">
      {
        digitalServices.map((service) => (
          <p class="font-mono text-black dark:text-white">
            {service}
          </p>
        ))
      }
    </section>
  </main>
</Layout>
